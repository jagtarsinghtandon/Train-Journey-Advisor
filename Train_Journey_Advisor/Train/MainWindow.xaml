                <EasingDoubleKeyFrame KeyTime="0:0:2" Value="192"/>
                <EasingDoubleKeyFrame KeyTime="0:0:2.9" Value="245.333"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
