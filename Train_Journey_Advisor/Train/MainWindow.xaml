                <EasingDoubleKeyFrame KeyTime="0:0:1.3" Value="-38.667"/>
                <EasingDoubleKeyFrame KeyTime="0:0:2" Value="73.333"/>
                <EasingDoubleKeyFrame KeyTime="0:0:2.9" Value="14"/>
